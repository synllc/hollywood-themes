{
    "id": "hollywood-dark",
    "name": "Hollywood Dark",
    "stylesheet": true,
    "editor": "vs-dark",

    "syntaxHighlight": {
        "comment": { "color" : "58624d" },
        "keyword": { "color" : "94ff71" },
        "operator": { "color" : "f7d979" },
        "namespace": { "color" : "66d4cf" },
        "type": { "color" : "66d4cf" },
        "typeParameter": { "color" : "6ac4dc" },
        "interface": { "color" : "66d4cf" },
        "function": { "color" : "7bffa0" },
        "member": { "color" : "a9dc98" },
        "variable": { "color" : "7d66ff" },
        "parameter": { "color" : "80dc62" },
        "property": { "color" : "a9dc98" },
        "label": { "color" : "615a60" },
        "number": { "color": "3befff" },
        "string": { "color": "6ab651" }
    },

    "groups": {
        "title-bar": ["#202020", "#253aa5", "#8b0107", "picker"],
        "button-bg": ["#373737", "#222222", "picker"]
    },

    "list": {
        "Title bar background color": 
            {
                "description": "We recommend a dark contrasting color.", 
                "map": { "hw-titlebar-bg": "title-bar" } 
            },
        "Button background color": 
            { 
                "description": "It should be lighter than the default background color.",
                "map": { "hw-button-bg": "button-bg" } 
            }
    },

    "metrics": {
        "ux-button-padding-v": {
            "title": "Button vertical padding",
            "description": "Sets the vertical space between a button's contents and its borders.",
            "metric": {
                "default": 0.2,
                "maximum": 3
            }
        },
    
        "ux-button-padding-h": {
            "title": "Button horizontal padding",
            "description": "Sets the horizontal space between a button's contents and its borders.",
            "metric": {
                "default": 0.5,
                "maximum": 4
            }
        },
    
        "ux-button-radius": {
            "title": "Button border radius",
            "description": "Adjusts the button roundness. Set to 0 for square buttons!",
            "metric": {
                "default": 0.3,
                "minimum": 0,
                "maximum": 2
            }
        }
    }
}